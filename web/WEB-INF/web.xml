<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>driver</param-name>
        <param-value>com.mysql.jdbc.Driver</param-value>
    </context-param>
    <context-param>
        <param-name>connectionString</param-name>
        <param-value>jdbc:mysql://localhost/librarydb</param-value>
    </context-param>
    <context-param>
        <param-name>username</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>password</param-name>
        <param-value></param-value>
    </context-param>
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>edu.ittn.librarymanagement.filter.AuthenticationFilter</filter-class>
        <init-param>
            <param-name>avoid-urls</param-name>
            <param-value>/Assets/,/login.jsp,/index.jsp</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <listener>
        <listener-class>edu.ittn.librarymanagement.dbconnect.DBconnection</listener-class>
    </listener>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>edu.ittn.librarymanagement.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BookServlet</servlet-name>
        <servlet-class>edu.ittn.librarymanagement.servlet.BookServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CategoryServlet</servlet-name>
        <servlet-class>edu.ittn.librarymanagement.servlet.CategoryServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MemberServlet</servlet-name>
        <servlet-class>edu.ittn.librarymanagement.servlet.MemberServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SystemUserServlet</servlet-name>
        <servlet-class>edu.ittn.librarymanagement.servlet.SystemUserServlet</servlet-class>
    </servlet>
    <!-- Login Servlet -->
    <servlet>
        <servlet-name>BookIssueServlet</servlet-name>
        <servlet-class>edu.ittn.librarymanagement.servlet.BookIssueServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/loginForm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/dashboard</url-pattern>
    </servlet-mapping>
    <!--Category Servlet -->
    <servlet-mapping>
        <servlet-name>CategoryServlet</servlet-name>
        <url-pattern>/addcategory</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CategoryServlet</servlet-name>
        <url-pattern>/addcategoryform</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CategoryServlet</servlet-name>
        <url-pattern>/listcategories</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CategoryServlet</servlet-name>
        <url-pattern>/editcat</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CategoryServlet</servlet-name>
        <url-pattern>/updatecategory</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CategoryServlet</servlet-name>
        <url-pattern>/deletecat</url-pattern>
    </servlet-mapping>
    <!--Book Servlet-->
    <servlet-mapping>
        <servlet-name>BookServlet</servlet-name>
        <url-pattern>/addbooks</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookServlet</servlet-name>
        <url-pattern>/addbookform</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookServlet</servlet-name>
        <url-pattern>/listbooks</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookServlet</servlet-name>
        <url-pattern>/editbooks</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookServlet</servlet-name>
        <url-pattern>/updatebooks</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookServlet</servlet-name>
        <url-pattern>/deletebooks</url-pattern>
    </servlet-mapping>
    <!-- Member Servlet -->
    <servlet-mapping>
        <servlet-name>MemberServlet</servlet-name>
        <url-pattern>/addmembers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MemberServlet</servlet-name>
        <url-pattern>/addmemberform</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MemberServlet</servlet-name>
        <url-pattern>/listmembers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MemberServlet</servlet-name>
        <url-pattern>/editmember</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MemberServlet</servlet-name>
        <url-pattern>/updatemember</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MemberServlet</servlet-name>
        <url-pattern>/deletemember</url-pattern>
    </servlet-mapping>
    <!-- System User Servlet -->
    <servlet-mapping>
        <servlet-name>SystemUserServlet</servlet-name>
        <url-pattern>/addsystemuser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SystemUserServlet</servlet-name>
        <url-pattern>/addsystemuserform</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SystemUserServlet</servlet-name>
        <url-pattern>/listusers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SystemUserServlet</servlet-name>
        <url-pattern>/editsystemuser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SystemUserServlet</servlet-name>
        <url-pattern>/updatesystemuser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SystemUserServlet</servlet-name>
        <url-pattern>/deletesystemuser</url-pattern>
    </servlet-mapping>
    <!--Book Issue Servlet -->
    <servlet-mapping>
        <servlet-name>BookIssueServlet</servlet-name>
        <url-pattern>/addbookissueform</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookIssueServlet</servlet-name>
        <url-pattern>/addbookissue</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookIssueServlet</servlet-name>
        <url-pattern>/listbookissue</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookIssueServlet</servlet-name>
        <url-pattern>/returnissue</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookIssueServlet</servlet-name>
        <url-pattern>/deleteissue</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
